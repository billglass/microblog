<h1>Users</h1>

<ol>
<% @users.each do |user| %>
<% if @relationship != true %>
	<%= user.username %> <a href="<%= "/follow/#{user.id}" %>">Follow</a>
    <% else %>
      <%= user.username %> <a href="<%= "/unfollow/#{user.id}" %>">Unfollow</a>
  <% end %>
<% end %>

</ol>

<% if flash[:notice] %>
  <div class="flash notice">
    <%=flash[:notice] %>
  </div>

<% else flash[:alert] %>
  <div class="flash alert">
    <%=flash[:alert] %>
  </div>
<% end %>