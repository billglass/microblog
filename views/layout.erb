<!DOCTYPE html>
<html>
	<head>
		<title>
			<%= @title %>
		</title>

		<meta charset="UTF-8">

		<link href='http://fonts.googleapis.com/css?family=Bangers' rel='stylesheet' type='text/css'>

		<link rel="stylesheet" type="text/css" href="/css/main.css">

		<script type="text/javascript" src="/jquery-2.1.3.js"></script>
		
		<script type="text/javascript" src=""></script>

	</head>

	<body>
		<div class="speech">
			<img src="/images/spike3.png">
		</div>
			
		<% if current_user %>	
			<% if @title == "Account" %>
				<div class="mainHead">
					<h1>
						<%= "Welcome #{current_user.username}" %>
					</h1>
				</div>
			<% elsif @title == "Feed" %>
				<div class="mainHead">
					<h1>
						<%= "Planet Bugle" %>
					</h1>
				</div>
			<% elsif @title == "Profile" %>
				<div class="mainHead">
					<h1>
						<%= "#{current_user.username}'s Profile" %>
					</h1>
				</div>
			<% elsif @title == "Members" %>
				<div class="mainHead">
					<h1>
						<%= "List of Members" %>
					</h1>
				</div>
			<% else %>
				<div class="head">	
					<h1>
						<%= @title %>
					</h1>
				</div>

				<div class="navBar">
					<nav>
						<ul>
							<% @nav.each do |key, value| %>
								<li>
									<a href=<%= value %>>
										<%= key %>
									</a>
								</li>
							<% end %>
						</ul>
						
						<form action="/logout" method="POST">
							<input type="submit" value="ZAP OUT" class="logout">
						</form>
					</nav>
				</div>				
			<% end %>

			<div class="weird">
				<% if @title != "Zap!" %>
					<div class="navBar">
						<nav>
							<ul>
								<% @nav.each do |key, value| %>
									<li>
										<a href=<%= value %>>
											<%= key %>
										</a>
									</li>
								<% end %>
							</ul>
							
							<form action="/logout" method="POST">
								<input type="submit" value="ZAP OUT" class="logout">
							</form>
						</nav>
					</div>

					<%= yield %>
				<% end %>
			</div>

		<% else %>
			<div class="head">	
				<h1>
					<%= @title %>
				</h1>
			</div>

		  <% if flash[:notice] %>
		    <div class="flash notice">
		      <%=flash[:notice] %>
		    </div>
		  <% end %>
		  <% if flash[:alert] %>
		    <div class="flash alert">
		      <%=flash[:alert] %>
		    </div>
		  <% end %>

			<!-- <img src="/images/batman.png" class="bats"> -->

			<div class="homeForms">
				<div class="login">
					<div class="zapHead">
						<h2>
							Zap In!
						</h2>
					</div>

					<div class="inFull">
						<form action="/login" method="POST">
							<div class="logForm">
								<input type="text" name="username" placeholder="Alias" required>
								<br>
								<input type="password" name="password" placeholder="Password" required>
							</div>		
							
							<div class="logSubmit">
								<input type="submit" value="ZAP!" class="submit">
							</div>
						</form>
					</div>
				</div>

				<div class="signUp">
					<div class="zapHead">
						<h2>
							Zap Up!
						</h2>
					</div>

					<div class="upFull">
						<form action="/sign_up" method="POST">
							<div class="signForm">
								<input type="text" name="[user]username" placeholder="Pick Your Alias" required>

								<br>

								<input type="email" name="[user]email" placeholder="Enter Your Email" required>

								<br>

								<input type="password" name="[user]password" placeholder="Pick Your Password" required>
							
							</div>

							<div class="signSubmit">
								<input type="submit" value="ZAP!" class="submit">
							</div>
						</form>
					</div>
				</div>
			</div>

			<!-- <img src="/images/doom.png" class="doom"> -->
		<% end %>
		
		<% if current_user %>
			<footer>
				<div class="footAll">
					<div class="footerUL">
						<ul>
						<% @nav.each do |key, value| %>
							<li>
								<a href=<%= value %>>
									<%= key %>
								</a>
							</li>
						<% end %>
						</ul>
					
						<form action="/logout" method="POST">
							<input type="submit" value="ZAP OUT" class="footLog">
						</form>
					
					</div>

					<!-- <div class="icons"> -->
						<a href="http://www.facebook.com">
							<img src="/images/icons/facebooklogo.png" class="icon">
						</a>
						
						<a href="http://www.instagram.com">
							<img src="/images/icons/instalogo.jpg" class="icon">
						</a>	
						
						<a href="http://www.twitter.com">
							<img src="/images/icons/twitterlogo.png" class="icon">
						</a>	
					<!-- </div> -->
				</div>
			</footer>
		<% end %>
	</body>
</html>