<!DOCTYPE html>
<html>
	<head>
		<title>
			<%= @title %>
		</title>

		<meta charset="UTF-8">

		<link href='http://fonts.googleapis.com/css?family=Bangers' rel='stylesheet' type='text/css'>

		<link rel="stylesheet" type="text/css" href="/styling.css">

		<script type="text/javascript" src="/jquery-2.1.3.js"></script>
		
		<script type="text/javascript" src=""></script>

	</head>

	<body>
		<div class="speech">
			<img src="/images/spike3.png">
		</div>
		

		<% if current_user %>
				<div class="mainHead">
					<h1>
						<%= "Welcome #{current_user.username}" %>
					</h1>
				</div>

				<div class="weird">
				<div class="navBar">
					<nav>
						<ul>
						<% @nav.each do |key, value| %>
							<li>
								<a href=<%= value %>>
									<%= key %>
								</a>
							</li>
							<% end %>
						</ul>
						
						<form action="/logout" method="POST">
							<input type="submit" value="ZAP OUT" class="logout">
						</form>
					</nav>
				</div>
			<% end %>
			
			<%= yield %>
		</div>
		
		<% if current_user %>
			<footer>
				<div class="footAll">
					<div class="footerUL">
						<ul>
						<% @nav.each do |key, value| %>
							<li>
								<a href=<%= value %>>
									<%= key %>
								</a>
							</li>
						<% end %>
						</ul>
					
						<form action="/logout" method="POST">
							<input type="submit" value="ZAP OUT" class="footLog">
						</form>
					
					</div>

					<!-- <div class="icons"> -->
						<img src="/images/icons/facebooklogo.png" class="icon">
						
						<img src="/images/icons/instalogo.jpg" class="icon">
						
						<img src="/images/icons/twitterlogo.png" class="icon">
					<!-- </div> -->
				</div>
			</footer>
		<% end %>
	</body>
</html>

