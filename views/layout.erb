<!DOCTYPE html>
<html>
	<head>
		<title>
			<%= @title %>
		</title>

		<meta charset="UTF-8">

		<link href='http://fonts.googleapis.com/css?family=Bangers' rel='stylesheet' type='text/css'>

		<link rel="stylesheet" type="text/css" href="/styling.css">

		<script type="text/javascript" src="/jquery-2.1.3.js"></script>
		
		<script type="text/javascript" src=""></script>

	</head>

	<body>
		<div class="speech">
			<img src="/images/spike3.png">
		</div>
		
		<%= yield %>

		<% if current_user %>
			<nav>
				<ul>
				<% @nav.each do |key, value| %>
					<li>
						<a href=<%= value %>>
							<%= key %>
						</a>
					</li>
					<% end %>
				</ul>
			</nav>

			<form action="/logout" method="POST">
				<input type="submit" value="ZAP OUT">
			</form>

			<footer>
				<div class="footerUL">
					<ul>
					<% @nav.each do |key, value| %>
						<li>
							<a href=<%= value %>>
								<%= key %>
							</a>
						</li>
					<% end %>
					</ul>
				</div>

				<div class="footerLogout">
						<form action="/logout" method="POST">
							<input type="submit" value="ZAP OUT">
						</form>
					</div>
			</footer>
		<% end %>

	</body>
</html>

